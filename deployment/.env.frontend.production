# Production Environment for Daloy Frontend
# Copy to .env.production in frontend directory

# API Configuration (HTTPS)
VITE_API_URL=https://api.daloy.com/api

# WebSocket Configuration (Secure WebSocket)
VITE_PUSHER_APP_KEY=your_pusher_app_key
VITE_PUSHER_APP_CLUSTER=mt1
VITE_WS_HOST=api.daloy.com
VITE_WS_PORT=443
VITE_WS_SCHEME=wss
VITE_WS_FORCE_TLS=true

# Application
VITE_APP_NAME=Daloy
VITE_APP_URL=https://daloy.com

# Sentry (Frontend Error Tracking)
# VITE_SENTRY_DSN=

# Analytics (Optional - Google Analytics, etc.)
# VITE_GA_TRACKING_ID=
